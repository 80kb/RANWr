<Page x:Class="AnimSoundMaker.Editor_RASD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:core="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Editor_RASD">
    <Page.Resources>
        <Style TargetType="DataGridCell" x:Key="MyCellStyle">
            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
        </Style>
        <Style TargetType="DataGridCell" x:Key="MyEndFrameStyle">
            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding PlaybackInterval}" Value="False">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                    <Setter Property="TextBlock.Text" Value="null"/>
                    
                </DataTrigger>
            </Style.Triggers>
            
        </Style>
    </Page.Resources> 
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <DataGrid ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" Grid.Row="2" Background="Transparent" BorderThickness="0"
                  x:Name="DataGrid" ItemsSource="{Binding myList}" IsManipulationEnabled="False"
                  AutoGenerateColumns="True" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                  ColumnWidth="*" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns"
                  CanUserReorderColumns="False" CanUserSortColumns="False" RowHeight="20" HorizontalAlignment="Right"
                  HorizontalGridLinesBrush="#e1e1e1" VerticalGridLinesBrush="#e1e1e1"
                  ClipboardCopyMode="ExcludeHeader" 
                  >
        </DataGrid>
    </Grid>
</Page>
